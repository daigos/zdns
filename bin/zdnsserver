#!/usr/bin/ruby
# encoding=utf-8

$LOAD_PATH << File.dirname(__FILE__)+"/../lib"

require 'zdns'
require 'zdns/ar'
require "optparse"

config = ZDNS::Config.new
config_path = nil

OptionParser.new do |opt|
  opt.on('-c config_file', '--config=config_file') {|path|
    config_path = path
  }

  opt.parse!(ARGV)
end

if config_path
  config.load_file(config_path)
else
  config.load_default_file
end

subcommand = ARGV[0] || ""
ZDNS::Daemon.spawn!(subcommand, config)
